<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Margin="5" Width="200">

        <Label Margin="-5px 0">Username:</Label>

        <TextBox x:Name="usernameTextBox" TextChanged="UsernameTextBox_Change" Margin="0,0,0,10" />

        <Button x:Name="submitBtn" Content="Submit" Click="SubmitBtn_Click" Width="200" HorizontalAlignment="Left"
      />

    </StackPanel>
</Window>
